{
  "editor.fontSize": 18,
  // --- Eslint ---
  "editor.formatOnSave": true,  // 存檔後自動格式化
  "eslint.autoFixOnSave": true, // 每次存檔時將 code 依照 eslint 格式自動修正
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // 存檔時自動排版
  },
  // "[vue]": {
  //   "editor.defaultFormatter": "octref.vetur"
  // },
  // "[typescript]": {
  //   "editor.defaultFormatter": "vscode.typescript-language-features"
  // },
  // --- Prettier ---
  "[javascript, typescript]": {
    "editor.formatOnSave": true
  },
  // 每行寬度
  "prettier.printWidth": 100,
  // 使用單引號
  "prettier.singleQuote": true,
  // 句尾加上分號
  "prettier.semi": true,
  // 字與括號保有空格
  "prettier.bracketSpacing": true,
}